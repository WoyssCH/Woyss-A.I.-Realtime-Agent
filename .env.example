ENVIRONMENT=local
LOG_LEVEL=INFO

# Public hostname + TLS (used by Caddy reverse proxy)
# Example:
#   PUBLIC_HOSTNAME=voice.example.com
#   TLS_EMAIL=admin@example.com
PUBLIC_HOSTNAME=voice.example.com
TLS_EMAIL=admin@example.com

# Public base URL (used in Twilio webhook URL construction)
# Example: https://voice.example.com
PUBLIC_BASE_URL=https://voice.example.com

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/assistant.db
AUTO_CREATE_DB_SCHEMA=true

# Whisper configuration (Hugging Face repo id or local path)
WHISPER_MODEL_SIZE=Systran/faster-whisper-large-v3
WHISPER_COMPUTE_TYPE=auto
WHISPER_DEVICE=auto

# Text-to-speech (set to 'coqui' for offline)
TTS_PROVIDER=azure
AZURE_SPEECH_KEY=your_azure_speech_key
AZURE_SPEECH_REGION=switzerlandnorth
DEFAULT_VOICE_FEMALE=de-CH-LeniNeural

# LLM configuration
LLM_PROVIDER=self_hosted_vllm
LLM_ENDPOINT=http://localhost:8001
LLM_API_KEY=your_llm_api_key
LLM_MODEL=meta-llama/Meta-Llama-3-8B-Instruct

# Extraction
EXTRACTION_CONFIDENCE_THRESHOLD=0.8

# Optional Next.js integration
NEXTJS_ACTION_ENDPOINT=https://your-webapp/api/assistant-actions
NEXTJS_ACTION_API_KEY=your_nextjs_api_key

# Twilio true-duplex SIP entrypoint
# Twilio Phone Number Voice webhook should call:
#   POST https://<PUBLIC_HOSTNAME>/api/twilio/sip
TWILIO_SIP_TARGET_URI=sip:assistant@your-sip-domain.sip.twilio.com

# Asterisk ARI (controller)
ASTERISK_ARI_URL=http://asterisk:8088/ari
ASTERISK_ARI_USERNAME=woyss
ASTERISK_ARI_PASSWORD=change_me
ASTERISK_STASIS_APP=woyss

# Python RTP media server (Asterisk ExternalMedia sends RTP here)
MEDIA_SERVER_HOST=media
MEDIA_SERVER_PORT=20000
MEDIA_RTP_PAYLOAD_TYPE=0

# Optional: store HF caches under /app/models (mounted from ./models)
HF_HOME=/app/models/hf
